root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.java]
indent_style = tab
tab_width = 4
trim_trailing_whitespace = true
max_line_length = 80

[*.{js,css}]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4

[*.{yml,json}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 4
